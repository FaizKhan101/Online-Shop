<%- include("../../shared/includes/head", { pageTitle: "Admin Products" }) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/product-management.js" defer></script>
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>All Products (Admin)</h1>
        <section>
            <h2>Manage Product</h2>
            <p>
                <a href="/admin/products/new" class="btn">Add Product</a>
            </p>
        </section>
        <section>
            <ul class="product-grid">
                <% for (const product of products) { %>
                    <li>
                        <%- include("../includes/product-item", { product }) %>
                    </li>
                <% } %>
            </ul>
        </section>
        
    </main>

<%- include("../../shared/includes/footer") %>